{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "resolveJsonModule": true,
    "typeRoots": [
      "../node_modules/@types"
    ],
    "lib": ["ES2020"],
    "types": ["playwright"],
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "paths": {
      "@pages/*": ["src/pages/*"],
      "@tests/*": ["src/tests/*"]
    }
  },
  "include": [
    "backend/src/**/*"
  ],
  "exclude": [
    "../node_modules", "dist"]
}
